{
	"$schema": "https://json.schemastore.org/tsconfig",
	"_version": "20.1.0",
	"compilerOptions": {
		"lib": [
			"es2020",
			"dom"
		],
		"target": "ES2020",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "./dist",
		"rootDir": "./src/",
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"module": "commonjs",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
	},
	"exclude": [
		"node_modules/**/*",
	],
}